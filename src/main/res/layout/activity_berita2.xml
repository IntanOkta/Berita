<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".berita2">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="273dp"
        android:layout_height="63dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/title3"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="217dp"
        android:layout_height="155dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/gempa" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="312dp"
        android:layout_height="254dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Jakarta, Aktual.com – Pos SAR di Kabupaten Gorontalo Utara, Provinsi Gorontalo, ikut mendukung upaya pencarian korban gempa dan tsunami Palu dan Donggala Provinsi Sulawesi Tengah. “Kami memanfaatkan media sosial diantaranya grup whatsapp, untuk ikut membantu memfasilitasi keluarga yang masih melakukan pencarian terhadap keluarganya yang masih belum terhubung atau belum ditemukan hingga hari ke tujuh ini,” ujar Koordinator Pos SAR Gorontalo Utara, Salama, di Gorontalo, Sabtu (6/10). Hingga saat ini, kata dia, data orang hilang yang berhasil dirangkum sesuai laporan atau informasi keluarga, mencapai 426 orang."
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

</android.support.constraint.ConstraintLayout>